{
  "importMap": "import_map.json",
  "compilerOptions": {
    "strict": false,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "dom.extras",
      "deno.ns",
      "deno.unstable"
    ],
    "types": [
      "./types.d.ts"
    ],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "https://esm.sh/preact@10.10.0",
    "strictNullChecks": false
  },
  "fmt": {
    "files": {
      "exclude": [
        "static",
        ".vscode",
        ".gitpod.yml",
        ".git*",
        ".env*"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "static",
        "test",
        ".vscode",
        "README.md",
        "LICENSE",
        "./deps.ts"
      ]
    },
    "rules": {
      "exclude": [
        "no-explicit-any",
        "import-prefix-missing"
      ]
    }
  },
  "tasks": {
    "dev": "deno run -A --unstable --watch=. main.tsx",
    "preview": "deno run --allow-net --allow-env main.tsx",
    "test": "deno test -A --unstable"
  }
}
